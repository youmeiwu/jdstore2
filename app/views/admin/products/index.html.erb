<div class="row">
  <div class="col-md-12">

  <h2>Products</h2>

  <p class="text-right">
    <%= link_to "New Product", new_admin_product_path, :class => "btn btn-primary" %>
  </p>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Operation</th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td><%= link_to product.title, admin_product_path(product)  %></td>
          <td><%= product.price  %></td>
          <td><%= product.quantity  %></td>
          <td>
            <%= link_to "Edit", edit_admin_product_path(product), :class => "btn btn-xs btn-default"  %>
            <%= link_to admin_product_path(product), :method => :delete, data: {confirm: "Are you sure?"} do %>
              <%= content_tag(:i, "", :class => "fa fa-trash") %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
