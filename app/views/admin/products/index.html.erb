<div class="row">
  <div class="col-md-12">

  <h2>Product List</h2>

  <p class="text-right" style="padding-bottom: 20px;">
    <%= link_to "New Product", new_admin_product_path, :class => "btn btn-primary btn-sm" %>
  </p>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>#</th>
        <th width="220">Picture</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th width="100">Options</th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td>
            <%= link_to product_path(product) do %>
              <% if product.image.present? %>
                <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
              <% else %>
                <%= image_tag("http//placehold.it/200x200&text=No Pic", class: "thumbnail") %>
              <% end %>
            <% end %>
          </td>
          <td><%= product.title %></td>
          <td><%= product.price  %></td>
          <td><%= product.quantity  %></td>
          <td>
            <%= link_to edit_admin_product_path(product) do %>
              <%= content_tag(:i, "", class: "fa fa-pencil") %>
            <% end %>
            <br>
            <%= link_to admin_product_path(product), :method => :delete, data: {confirm: "Are you sure?"} do %>
              <%= content_tag(:i, "", :class => "fa fa-trash") %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
