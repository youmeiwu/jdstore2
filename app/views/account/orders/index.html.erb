<div class="row">
  <div class="col-md-12">

    <h2>我的订单</h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <td>订单号</td>
          <td>订单总价</td>
          <td>下单日期</td>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to(order.id, order_path(order.token)) %></td>
            <td><%= order.total %></td>
            <td><%= order.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
